      "elementSchema": "dtmi:sdv:airbag_adjustment;1"
    },
    {
      "@id": "dtmi:sdv:airbag_adjustment;1",
      "@type": "Object",
      "fields": [
        {
          "name": "airbag_identifier",
          "schema": "integer"
        },
        {
          "name": "inflation_level",
          "schema": "integer"
        },
        {
          "name": "duration_in_seconds",
          "schema": "integer"
        }
      ]
    }
  ]
