    },
    {
      "@id": "dtmi:sdv:massage_step;1",
      "@type": "Array",
      "elementSchema": "dtmi:sdv:airbag_adjustments;1"
    },
    {
      "@id": "dtmi:sdv:airbag_adjustments;1",
